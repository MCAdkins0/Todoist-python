WindowManager:
    MainWindow:
    TaskListWindow:
    AddTaskWindow:
    SettingsWindow:

<MainWindow>:
    name: "Main"

    GridLayout:
        cols: 2

        Label:
            text: "Todoist Task app"
            height: 30

        Label:
            text: "version 0.0.3"

        Button:
            text: "Fetch Tasks"
            on_release: 
                app.root.current = "Todo List"

        Button:
            text: "Settings"
            on_release: 
                app.root.current = "Settings"

        Button:
            text: "Add Task"
            on_release: 
                app.root.current = "Add Task"

<TaskListWindow>:
    name: "Todo List"
    id: task_list_window
    
    GridLayout:
        cols: 1

        ScrollView:
            do_scroll_y: True
            GridLayout:
                cols:4
                size_hint_y: None
                id:taskGrid

        Button:
            text: "Fetch Tasks"
            on_release:
                root.listTasks()
            size_hint_y: None
            height: 20
        Button:
            text: "Back"
            on_release: 
                app.root.current = "Main"
            size_hint_y: None
            height: 20

<AddTaskWindow>:
    name: "Add Task"

    GridLayout:
        cols: 2

        Label:
            text: "Task Name"
        
        TextInput:
            id:taskname

        Label:
            id: task_project
            text: "Project"
        
        Spinner:
            id: projectname
            text: "Choose Project"
            values: ["Inbox", "Personal", "Work"]

            on_text: root.project_spinner_clicked(projectname.text)
        
        

<SettingsWindow>:
    name: "Settings"

    GridLayout:
        cols: 1

        GridLayout:
            cols: 3

            Label:
                text: "API Key: "
            
            TextInput:
                id: apiKey

            Button:
                text: "Add/Update Key"
                on_release: root.updateKey(apiKey.text)

        BoxLayout:
            id: list_projects_settings

        Label:
            text: "Projects"
        Button: 
            text: "Get Projects"
            on_release: root.listProjects()

        Button:
            text: "Back"
            on_release: 
                app.root.current = "Main"